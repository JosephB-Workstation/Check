<resources>

    <!-- light application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundColor">#fcfcfc</item>
        <item name="cardBackground">#fcfcfc</item>
        <item name="textColor">#000000</item>
        <item name="tintColor">#000000</item>
        <item name="buttonColor">#dbdbdb</item>
        <item name="colorBackgroundFloating"> #fcfcfc </item>
        <item name="android:windowAnimationStyle"> @style/WindowAnimation</item>

    </style>

    <!-- dark application theme. -->
    <style name="darkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#434343</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#007166</item>
        <item name="backgroundColor">#505050</item>
        <item name="cardBackground">#606060</item>
        <item name="textColor">#ffffff</item>
        <item name="tintColor">#ffffff</item>
        <item name="buttonColor">#363636</item>
        <item name="colorBackgroundFloating"> #606060 </item>
        <item name="android:windowAnimationStyle"> @style/WindowAnimation</item>
    </style>

    <style name ="LightDialogCustom" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:background">#fcfcfc</item>
        <item name="colorOnSurface">#000000</item>
        <item name="colorSurface">#000000</item>
        <item name="buttonBarPositiveButtonStyle">@style/LPositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/LNegativeButtonStyle</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name ="DarkDialogCustom" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorAccent">#007166</item>
        <item name="android:background">#606060</item>
        <item name="colorOnSurface">#ffffff</item>
        <item name="colorSurface">#ffffff</item>
        <item name="buttonBarPositiveButtonStyle">@style/DPositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/DNegativeButtonStyle</item>
        <item name="android:textColorPrimary">#ffffff</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">24sp</item>

    </style>

    <style name="DPositiveButtonStyle" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:textColor">#ffffff</item>
        <item name="backgroundTint">#363636</item>
        <item name="android:textSize"> 18sp</item>
    </style>
    <style name="DNegativeButtonStyle" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:textColor">#ffffff</item>
        <item name="backgroundTint">#363636</item>
        <item name="android:textSize"> 18sp</item>
    </style>

    <style name="LPositiveButtonStyle" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:textColor">#000000</item>
        <item name="backgroundTint">#dbdbdb</item>
        <item name="android:textSize"> 18sp</item>
    </style>
    <style name="LNegativeButtonStyle" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:textColor">#000000</item>
        <item name="backgroundTint">#dbdbdb</item>
        <item name="android:textSize"> 18sp</item>
    </style>

    <style name="WindowAnimation">
        <item name="android:windowEnterAnimation"> @android:anim/fade_in</item>
        <item name="android:windowExitAnimation"> @android:anim/fade_out</item>
    </style>



</resources>
