<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:theme="@style/Theme.AppCompat.DayNight.Dialog.Alert"
    android:padding="20dp"
    android:background="?attr/cardBackground">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Task Name:"
        android:textColor="?attr/textColor"
        android:textSize="20sp">

    </TextView>

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Enter Task Name - Necessary"
        android:inputType="text"
        android:text=""
        android:autofillHints="Task name"
        android:id="@+id/taskName"
        android:textColor="?attr/textColor"
        android:textColorHint="?attr/textColor"
        android:backgroundTint="?attr/tintColor">

    </EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Task Description:"
        android:textColor="?attr/textColor"

        android:layout_marginTop="20dp"
        android:textSize="20sp">

    </TextView>

    <EditText
        android:id="@+id/taskDescription"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:autofillHints="Task description"
        android:hint="Enter a description"
        android:maxLength="2000"
        android:maxLines="4"
        android:inputType="textMultiLine"
        android:text=""
        android:textColor="?attr/textColor"
        android:textColorHint="?attr/textColor"
        android:backgroundTint="?attr/tintColor">

    </EditText>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/toggleDueView">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Task due: "
        android:textColor="?attr/textColor"
        android:id="@+id/taskTimeMessage">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12/12/1212"
        android:id = "@+id/dayView"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:textColor="?attr/textColor"
        android:layout_toRightOf="@id/taskTimeMessage">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:id = "@+id/timeView"
        android:textColor="?attr/textColor"
        android:layout_toRightOf="@id/dayView">

    </TextView>
</RelativeLayout>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set date"
        android:layout_marginTop="5dp"
        android:textColor="?attr/textColor"
        android:backgroundTint="?attr/buttonColor"
        android:id="@+id/dueDateButton">

    </Button>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/dueDateButton"
        android:text="Set time"
        android:layout_marginTop="5dp"
        android:textColor="?attr/textColor"
        android:backgroundTint="?attr/buttonColor"
        android:layout_marginLeft="5dp"
        android:id="@+id/dueTimeButton">

    </Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/dueTimeButton"
        android:text="Timer: off"
        android:textColor="?attr/textColor"
        android:backgroundTint="?attr/buttonColor"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/dueToggleButton">

    </Button>

</RelativeLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recursion Rate"
        android:textColor="?attr/textColor"
        android:backgroundTint="?attr/buttonColor"
        android:id="@+id/recursionRateButton">

    </Button>

</LinearLayout>