<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:CardView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    CardView:cardBackgroundColor="?attr/cardBackground"
    CardView:cardCornerRadius="8dp"
    CardView:cardElevation="8dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:id="@+id/listCard"
    CardView:cardUseCompatPadding="true"
    android:baselineAligned="false"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Name error!"
            android:textColor="?attr/textColor"
            android:lines="1"
            android:ellipsize="end"
            android:id="@+id/listNameMark">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Tag error!"
            android:textColor="?attr/textColor"
            android:id="@+id/listTagMark"
            android:layout_below="@+id/listNameMark">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Time error!"
            android:textColor="?attr/textColor"
            android:id="@+id/listTimeMark"
            android:layout_below="@+id/listTagMark">
        </TextView>

    </RelativeLayout>

</androidx.cardview.widget.CardView>